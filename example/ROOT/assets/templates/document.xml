<?xml version="1.0" encoding="utf-8"?>
<xmtp:root xmlns:tei="http://www.tei-c.org/ns/1.0"
           xmlns:xi="http://www.w3.org/2001/XInclude"
           xmlns:xmg="http://www.cch.kcl.ac.uk/xmod/global/1.0"
           xmlns:xmtp="http://www.cch.kcl.ac.uk/xmod/template/1.0"
           xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <!-- Imports stylesheet to convert TEI into HTML. -->
  <xsl:import href="cocoon://_internal/template/xsl/stylesheets/tei/to-html.xsl" />

  <xmtp:parent>
    <xi:include href="base.xml" />
  </xmtp:parent>

  <xmtp:child>
    <xmtp:block name="title">
      <xsl:call-template name="document-title" />
      <xmtp:super />
    </xmtp:block>

    <xmtp:block name="page-header">
      <div class="page-header">
        <xmtp:block name="page-heading">
          <xsl:call-template name="document-heading" />
        </xmtp:block>
      </div>
    </xmtp:block>

    <xmtp:block name="content">
      <div class="span2">&#160;</div>
      <div class="span8 main">
        <xsl:call-template name="document-content" />
      </div>
      <div class="span2">&#160;</div>
    </xmtp:block>
  </xmtp:child>
</xmtp:root>
