            <div type="edition" xml:space="preserve" xml:lang="la" resp="#AA">
                <div type="textpart" subtype="face" n="front">
                    <ab>
                        <lb n="1"/><persName type="ruler" key="maximinus-daia"><expan><abbr>d</abbr><ex>omino</ex></expan> <expan><abbr>n</abbr><ex>ostro</ex></expan> <name>Galerio</name> <name><expan><abbr>Val</abbr><ex>erio</ex></expan></name>
                        <lb n="2"/><name>Maximino</name></persName> <expan><abbr>nob</abbr><ex>ilissimo</ex></expan>
                        <lb n="3"/><expan><abbr>Caes</abbr><ex>ari</ex></expan> <persName type="attested"><name>Ulpius</name>
                        <lb n="4"/><name>Alenus</name></persName> <expan><abbr>v</abbr><ex>ir</ex></expan> <expan><abbr>p</abbr><ex>erfectissimus</ex></expan> <expan><abbr>corr</abbr><ex>ector</ex></expan>
                        <lb n="5"/><expan><abbr>Apul</abbr><ex>iae</ex></expan> et <expan><abbr>Cal</abbr><ex>abriae</ex></expan>
                        <lb n="6"/><expan><abbr>d</abbr><ex>evotus</ex></expan> <expan><abbr>n</abbr><ex>umini</ex></expan> <expan><abbr>m</abbr><ex>aiestati</ex><abbr>que</abbr></expan> eius
                    </ab>
                </div>
                <div type="textpart" subtype="face" n="left">
                    <ab>
                        <lb n="1"/><expan><abbr>ded</abbr><ex>icata</ex></expan> <num value="5">V</num> <expan><abbr>Non</abbr><ex>as</ex></expan> <expan><abbr>Mart</abbr><ex>ias</ex></expan>
                        <lb n="2"/><persName type="attested"><name>Aemiliano</name> <num value="2">II</num></persName> et <persName type="attested"><name>Aquilino</name></persName>
                        <lb n="3"/><expan><abbr>co</abbr><ex>n</ex><abbr>s</abbr><ex>ulibus</ex></expan>
                    </ab>
                </div>
