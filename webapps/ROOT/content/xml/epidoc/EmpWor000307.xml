            <div type="edition" xml:space="preserve" xml:lang="la" resp="#AA">
                <ab>
                    <lb n="1"/><persName type="attested"><name>Coeliae</name> <persName type="patronym"><name><expan><abbr>M</abbr><ex>arci</ex></expan></name> <expan><abbr>f</abbr><ex>iliae</ex></expan></persName> <name>Tertull<hi rend="ligature">ae</hi></name></persName>
                    <lb n="2"/>sacerdoti <persName type="divine" key="divaLivia"><name>di<hi rend="ligature">va</hi>e</name> <name><hi rend="ligature">Au</hi>gustae</name></persName>
                    <lb n="3"/><persName type="attested"><name>Gabbia</name> <persName type="patronym"><name><expan><abbr>M</abbr><ex>arci</ex></expan></name> <expan><abbr>f</abbr><ex>iliae</ex></expan></persName> <name>Tertulla</name></persName>
                    <lb n="4"/>avia posit
                    <lb n="5"/>huic primae omnium
                    <lb n="6"/>in municipio annorum <num value="7">VII</num>
                    <lb n="7"/>decurionum decreto sacer
                    <lb n="8" break="no"/>dotium datum est
                </ab>
