                    <lb n="1"/>pro salute et reditu <persName type="ruler"><name>Caesaris</name> <name>A<supplied reason="lost">ugusti</supplied></name></persName>
                    <lb n="2"/><persName type="attested"><name><expan><abbr>M</abbr><ex>arcus</ex></expan></name> <name>Varenus</name> <expan><abbr><am><g ref="#mulieris">Ↄ</g></am></abbr><ex>mulieris</ex></expan> </persName> et <persName type="attested"><name><expan><abbr>M</abbr><ex>arci</ex></expan></name> <name>Lartidi</name> <expan><abbr>l</abbr><ex>ibertus</ex></expan> <name>Diphilus</name></persName> <expan><abbr>mag</abbr><ex>ister</ex></expan> <expan><abbr>He<unclear>r</unclear><supplied reason="lost">c</supplied></abbr><ex>ulaneus</ex></expan> <supplied reason="lost"><expan><abbr>d</abbr><ex>e</ex></expan> <expan><abbr>s</abbr><ex>ua</ex></expan> <expan><abbr>p</abbr><ex>ecunia</ex></expan> <expan><abbr>f</abbr><ex>aciundum</ex></expan> <expan><abbr>c</abbr><ex>uravit</ex></expan></supplied>
