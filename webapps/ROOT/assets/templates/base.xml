<?xml version="1.0" encoding="utf-8"?>
<kiln:root xmlns:tei="http://www.tei-c.org/ns/1.0"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xmlns:kiln="http://www.kcl.ac.uk/artshums/depts/ddh/kiln/ns/1.0"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- Imports the default variables. -->
    <xsl:import href="cocoon://_internal/template/xsl/stylesheets/defaults.xsl" />

    <!-- Imports the menu stylesheet -->
    <xsl:import href="cocoon://_internal/template/xsl/stylesheets/menu/menu.xsl" />

    <kiln:block name="html">
        <html>
            <kiln:block name="head">
                <head>
                    <meta charset="utf-8" />
                    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
                    <title><kiln:block name="title">Kiln: </kiln:block></title>
                    <kiln:block name="js">
                        <script
                            src="http://code.jquery.com/jquery-latest.min.js">&#160;</script>
                    </kiln:block>
                    <kiln:block name="css">
                        <link href="http://yui.yahooapis.com/pure/0.2.0/pure-min.css"
                            rel="stylesheet" />
                        <link href="{$kiln:assets-path}/styles/base.css" rel="stylesheet"
                            type="text/css" />
                    </kiln:block>
                    <kiln:block name="head-extra">
                    </kiln:block>
                </head>
            </kiln:block>
            <kiln:block name="body">
                <body>
                    <div class="pure-g-r">
                        <kiln:block name="navigation">
                            <div class="main-navigation pure-u-1">
                                <kiln:block name="main-navigation">
                                    <div class="pure-menu pure-menu-open pure-menu-horizontal">
                                        <a class="pure-menu-heading" href="">Kiln</a>

                                        <xsl:apply-templates
                                            select="/aggregation/div[@type='menu']"
                                            mode="main-menu" />
                                    </div>
                                </kiln:block>
                            </div>
                        </kiln:block>
                        <kiln:block name="page-header">
                            <div class="header pure-u-1">
                                <h1>
                                    <kiln:block name="page-heading">
                                        <xsl:value-of
                                            select="/aggregation/tei:TEI/tei:teiHeader/tei:fileDesc/tei:titleStmt/tei:title" />
                                    </kiln:block>
                                </h1>
                            </div>
                        </kiln:block>
                        <kiln:block name="content-section">
                            <div class="local-navigation pure-u-1-5">
                                <kiln:block name="local-navigation">
                                    <xsl:apply-templates
                                        select="/aggregation/div[@type='menu']"
                                        mode="local-menu" />
                                </kiln:block>
                            </div>
                            <div class="content pure-u-4-5">
                                <kiln:block name="content-block">
                                    <kiln:block name="content" />
                                </kiln:block>
                            </div>
                        </kiln:block>
                        <kiln:block name="footer">
                            <div class="footer pure-u-1">
                                <div class="l-box">
                                    <p>Powered by <a href="https://github.com/kcl-ddh/kiln/">Kiln</a></p>
                                    <p>Theme by <a href="http://purecss.io/">Pure</a></p>
                                </div>
                            </div>
                        </kiln:block>
                    </div>
                </body>
            </kiln:block>
        </html>
    </kiln:block>
</kiln:root>
