<?xml version="1.0" encoding="utf-8"?>
<kiln:root xmlns:tei="http://www.tei-c.org/ns/1.0"
           xmlns:xi="http://www.w3.org/2001/XInclude"
           xmlns:kiln="http://www.kcl.ac.uk/artshums/depts/ddh/kiln/ns/1.0"
           xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <xsl:include href="cocoon://_internal/url/reverse.xsl" />
  
  <!-- Imports stylesheet to convert TEI into HTML. -->
  <xsl:import href="cocoon://_internal/template/xsl/stylesheets/tei/sample.xsl" />

  <kiln:parent>
    <xi:include href="base.xml" />
  </kiln:parent>

  <kiln:child>
    <kiln:block name="title">
      <kiln:super />
      <xsl:value-of select="/aggregation/sample_p5//body/h2[1]" />
    </kiln:block>
   
    <kiln:block name="css">
      <kiln:super />
      <link href="/epidoc/global.css" 
        rel="stylesheet" type="text/css" />
    </kiln:block>
    
    <kiln:block name="page-heading">
      <kiln:super />
      <xsl:value-of select="/aggregation/sample_p5//body/h2[1]" />
    </kiln:block>

    <kiln:block name="content">
      
      <xsl:variable name="url" select="kiln:url-for-match('local-sample-display-html', ($view, $filename))" />
      <p>
      <a href="{$url}?edition-type=diplomatic">
        <xsl:text>Diplomatic Edition</xsl:text>
      </a>
      <br/>
      <a href="{$url}?line-inc=4&amp;leiden-style=panciera">
        <xsl:text>Panciera</xsl:text>
      </a>|
      
      <a href="{$url}?line-inc=4&amp;leiden-style=ddbdp">
        <xsl:text>ddbdp</xsl:text> 
      </a>|
      
      <a href="{$url}?line-inc=4&amp;leiden-style=london">
        <xsl:text>London</xsl:text> 
      </a> (Number every 4th line)
      <br/>
      <a href="{$url}?line-inc=5&amp;leiden-style=panciera">
        <xsl:text>Panciera</xsl:text>
      </a>|
      
      <a href="{$url}?line-inc=5&amp;leiden-style=ddbdp">
        <xsl:text>ddbdp</xsl:text>
      </a>|
      
      <a href="{$url}?line-inc=5&amp;leiden-style=london">
        <xsl:text>London</xsl:text> 
      </a> (Number every 5th line)
      </p>
      <div class="row">
        
        <div class="large-12 columns">
          <xsl:sequence select="/aggregation/sample_p5//body"/>
        </div>
      </div>
    </kiln:block>
  </kiln:child>

</kiln:root>
