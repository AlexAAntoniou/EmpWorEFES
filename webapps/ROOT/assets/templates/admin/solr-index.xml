<?xml version="1.0" encoding="utf-8"?>
<xmtp:root xmlns:xi="http://www.w3.org/2001/XInclude"
           xmlns:xmg="http://www.cch.kcl.ac.uk/xmod/global/1.0"
           xmlns:xmtp="http://www.cch.kcl.ac.uk/xmod/template/1.0"
           xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <xsl:import href="cocoon://_internal/template/xsl/stylesheets/solr/index-to-html.xsl" />

  <xsl:param name="file" />

  <xmtp:parent>
    <xi:include href="base.xml" />
  </xmtp:parent>

  <xmtp:child>
    <xmtp:block name="title">Solr index result for <xsl:value-of select="$file" /></xmtp:block>

    <xmtp:block name="header">
      <h1>Kiln Admin: Solr index result for <xsl:value-of select="$file" /></h1>
    </xmtp:block>

    <xmtp:block name="content">
      <xsl:apply-templates select="/aggregation/response" mode="solr" />
    </xmtp:block>
  </xmtp:child>

</xmtp:root>
