<?xml version="1.0" encoding="utf-8"?>
<kiln:root xmlns:dir="http://apache.org/cocoon/directory/2.0"
           xmlns:xi="http://www.w3.org/2001/XInclude"
           xmlns:kiln="http://www.kcl.ac.uk/artshums/depts/ddh/kiln/ns/1.0"
           xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <!-- Template to display a list of documents and links to various
       editorial processes that may be applied to them. -->

  <xsl:import href="cocoon://_internal/template/xsl/stylesheets/admin/xml-dirs-to-process-list-html.xsl" />

  <kiln:parent>
    <xi:include href="base.xml" />
  </kiln:parent>

  <kiln:child>
    <kiln:block name="title"><kiln:super />Documents</kiln:block>
    <kiln:block name="header"><h1>Documents</h1></kiln:block>
    <kiln:block name="content">
      <div class="row">
        <h2>Global processes</h2>

        <ul>
          <li><a href="../solr/index/all.html">Index all documents
          into Solr</a></li>
          <li><a href="../rdf/harvest/all.html">Harvest all documents
          into Sesame (RDF)</a></li>
        </ul>

        <h2>Individual processes</h2>

        <h3>TEI</h3>

        <table>
          <thead>
            <tr>
              <th scope="col">File</th>
              <th colspan="2" scope="col">Validation</th>
              <th scope="col">Search</th>
              <th scope="col">RDF</th>
              <th scope="col">View</th>
            </tr>
          </thead>
          <tbody>
            <xsl:apply-templates select="/aggregation/dir:directory/*" />
          </tbody>
        </table>
      </div>
    </kiln:block>
  </kiln:child>

</kiln:root>
