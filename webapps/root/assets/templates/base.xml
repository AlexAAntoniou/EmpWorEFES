<?xml version="1.0" encoding="utf-8"?>
<xmtp:root xmlns:tei="http://www.tei-c.org/ns/1.0" 
  xmlns:xi="http://www.w3.org/2001/XInclude"
  xmlns:xmg="http://www.cch.kcl.ac.uk/xmod/global/1.0"
  xmlns:xmm="http://www.cch.kcl.ac.uk/xmod/menu/1.0"
  xmlns:xmtp="http://www.cch.kcl.ac.uk/xmod/template/1.0"
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <!-- Imports the default variables. -->
  <xsl:import href="cocoon://_internal/template/xsl/stylesheets/defaults.xsl" />
  
  <!-- Imports the menu stylesheet -->
  <xsl:import href="cocoon://_internal/template/xsl/kiln/stylesheets/menu/menu.xsl" />

  <xmtp:block name="html">
    <!--[if IE 7 ]> <html class="no-js ie7" lang="en"> <![endif]-->
    <!--[if IE 8 ]> <html class="no-js ie8" lang="en"> <![endif]-->
    <!--[if (gte IE 9)|!(IE)]><!-->
    <html class="no-js" lang="en">
      <!--<![endif]-->
      <xmtp:block name="head">
        <head>
          <xmtp:block name="title">
            <title>Kiln: <xsl:value-of
                select="/aggregation/tei:TEI/tei:teiHeader/tei:fileDesc/tei:titleStmt/tei:title[not(@type)]"
               /></title>
          </xmtp:block>
          <xmtp:block name="js">
            <!-- jQuery from Google CDN. -->
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.3/jquery.min.js"
              >&#160;</script>
            <!-- jQuery tools from Flowplayer CDN. -->
            <script src="http://cdn.jquerytools.org/1.2.5/all/jquery.tools.min.js">&#160;</script>
          </xmtp:block>
          <xmtp:block name="css">
            <link href="{$xmg:assets-path}/styles/base.css" rel="stylesheet" type="text/css" />
            <link href="{$xmg:assets-path}/styles/site.css" rel="stylesheet" type="text/css" />
          </xmtp:block>
          <xmtp:block name="head-extra">
            <!-- Mobile etc. devices: courtesy of 320+Up:
                 http://stuffandnonsense.co.uk/projects/320andup/ -->
            <!-- For Nokia. -->
            <link href="{$xmg:assets-path}/images/apple-touch-icon.png" rel="shortcut icon" />
            <!-- For everything else. -->
            <link href="{$xmg:assets-path}/images/favicon.ico" rel="shortcut icon" />

            <!--iOS. Delete if not required. -->
            <meta content="yes" name="apple-mobile-web-app-capable" />
            <meta content="black-translucent" name="apple-mobile-web-app-status-bar-style" />
            <link href="{$xmg:assets-path}/images/i/splash.png" rel="apple-touch-startup-image" />

            <!--Microsoft. Delete if not required. -->
            <meta content="on" http-equiv="cleartype" />
            <meta content="IE=edge,chrome=IE6" http-equiv="X-UA-Compatible" />
            <meta content="width=device-width,initial-scale=1" name="viewport" />
            <!-- Modernizr: this should be called AFTER CSS to avoid
                 FOUC. -->
            <script src="{$xmg:assets-path}/scripts/libs/modernizr-dev.js">&#160;</script>
          </xmtp:block>
        </head>
      </xmtp:block>
      <xmtp:block name="body">
        <body>
          <xmtp:block name="skip-navigation">
            <div class="hidden">
              <ul>
                <li>
                  <a href="#contentSection">Skip to content</a>
                </li>
                <li>
                  <a href="#localNavigation">Skip to local navigation</a>
                </li>
                <li>
                  <a href="#mainNavigation">Skip to main navigation</a>
                </li>
              </ul>
            </div>
          </xmtp:block>
          <div class="wrapper">
            <xmtp:block name="page-header">
              <header class="line headerSection">
                <div class="unit size1of1 lastUnit">
                  <h1 class="headerLogo">
                    <xmtp:block name="page-heading">Page heading</xmtp:block>
                  </h1>
                </div>
              </header>
            </xmtp:block>
            <xmtp:block name="navigation">
              <div class="line">
                <xmtp:block name="main-navigation">
                  <nav class="primary" id="mainNavigation">
                    <xsl:apply-templates select="/aggregation/xmm:root" mode="main-navigation" />
                  </nav>
                </xmtp:block>
              </div>
            </xmtp:block>
            <xmtp:block name="content-section">
              <div class="line contentSection">
                <xmtp:block name="local-navigation">
                  <div class="unit size1of4" id="localNavigation">
                    <xsl:apply-templates select="/aggregation/xmm:root" mode="local-navigation" />
                  </div>
                </xmtp:block>
                <xmtp:block name="content">
                  <div class="unit size3of4 lastUnit" id="content">
                    <p>Content column</p>
                  </div>
                </xmtp:block>
              </div>
            </xmtp:block>
          </div>
          <xmtp:block name="footer">
            <footer class="line footerSection">
              <p>This is the footer.</p>
            </footer>
          </xmtp:block>
        </body>
      </xmtp:block>
    </html>
  </xmtp:block>
</xmtp:root>
