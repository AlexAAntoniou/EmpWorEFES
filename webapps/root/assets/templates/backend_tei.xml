<?xml version="1.0" encoding="utf-8"?>
<xmtp:root xmlns:tei="http://www.tei-c.org/ns/1.0"
           xmlns:xi="http://www.w3.org/2001/XInclude"
           xmlns:xmg="http://www.cch.kcl.ac.uk/xmod/global/1.0"
           xmlns:xmtp="http://www.cch.kcl.ac.uk/xmod/template/1.0"
           xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <!-- Imports stylesheet to convert TEI into HTML. -->
  <xsl:import
    href="cocoon://_internal/template/xsl/stylesheets/tei/to-html.xsl" />

  <data>
    <title>
      <xmtp:block name="title">
        <xsl:value-of select="/tei:TEI/tei:teiHeader/tei:fileDesc/tei:titleStmt/tei:title[not(@type)]" />
      </xmtp:block>
    </title>
    <metadata>
      <xmtp:block name="metadata"></xmtp:block>
    </metadata>
    <css>
      <xmtp:block name="css"></xmtp:block>
    </css>
    <js>
      <xmtp:block name="js"></xmtp:block>
    </js>
    <content>
      <xmtp:block name="content">
        <xsl:apply-templates select="/tei:TEI" />
      </xmtp:block>
    </content>
  </data>
</xmtp:root>
